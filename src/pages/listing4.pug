extends common/layout

mixin alphabet(letter)
  a.listing__letter.text-center.text-info(href="#") #{letter}

block header
  include common/header-left


block content
  main.main.container.position-relative.mt-0.v2-main
    .v2-listing-header
      button.back-button.btn.text-info.d-flex.p-0.align-items-center.v2-listing__back-button
        img(src="img/icon-back.svg")
        span.v2-listing__back-button-desktop Вернуться на главную
        span.v2-listing__back-button-mobile На главную
      input.listing__search.v2-listing__search.input-underline.input-search(type='search', placeholder='Поиск', aria-label='Поиск')

      .v2-listing__filters
        button.v2-listing__filter
          img(src="img/icon-filter-button.svg" width='17' height='10')
          span Фильтрация
        button.v2-listing__city-filter.opened
          span Город
          img(src="img/icon-dropdown-tick.svg" width='11' height='7')
        button.v2-listing__filter-off Сбросить фильтрацию

        .v2-listing__city-filter-content
          button.v2-listing__close-filters
            img(src="img/x-icon.svg" width='15' height='15')
          .v2-listing__city-filter-content-wrapper
