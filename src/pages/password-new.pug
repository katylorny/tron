extends common/layout

block header
  include common/header-small

block content
  main.main.container
    .password.white-window.align-items-center.mt-3.mb-4
      h2.mb-4 Укажите пароль из письма
      .password__field.d-flex.align-items-center
        label(for="email") E-mail
        input.input-underline(type="email" id="email" name="email" placeholder="Адрес электронной почты")
      .password__field.d-flex.align-items-center.mb-5
        label(for="password")
        input.input-underline(type="password" id="password" name="password" placeholder="Пароль из письма")

      button.btn.btn-primary(type="submit") Отправить
